@using CaraEntites;
@using ViewModels;
@model List<CertificateMailingViewModel>
@{
    ViewBag.Title = "Contacts";
    Html.RenderAction("_WorkFlow", "NavMenu", new { StepId = "Contacts" });
}
<script>
    var _beforeChanges = new Array();
    $(document).ready(function () {
        var frms = $('form');
        alert(frms.length);
        //frms.each(function () { alert($(this).id); });
    });
    $(function () {
         @{ if (ViewBag.Message != null )
           {
            
                       @:$.growlUI('', '@ViewBag.Message');
                    }
            };
        
    })
</script>
<!DOCTYPE html>

<html>
<head>
    <title>CARA Online Applivation</title>
    <style>
        .longField {
            width: 500px;
            margin-right: 15px;
        }
    </style>
    <script>
        function AddCertificateMailing() {
            $(".hidden").removeClass("hidden");
            $("#AddMailing").attr("disabled", true);
        }
    </script>
</head>
<body>
    <form id="frmMailingContacts" name="frmMailingContacts">
        <br />
        <div>
            @foreach (CertificateMailingViewModel cert in Model)
            {
                Html.RenderPartial("_CertificateMailingRecipient", cert);
            }
            <div style="width: 90%; max-width: 1100px">
                <input type="button" id="AddMailing" value="Add Mailing Recipient" onclick="AddCertificateMailing()" />
            </div>
        </div>
    </form>
</body>
</html>
